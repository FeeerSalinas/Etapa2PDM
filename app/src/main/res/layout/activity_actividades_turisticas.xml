<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#97D9F6"
    tools:context=".ActividadesTuristicas">

    <!-- ImageView -->
    <ImageView
        android:id="@+id/portada"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:scaleType="centerCrop"
        app:srcCompat="@mipmap/fondo" />

    <!-- CardView -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="430dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/portada"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:elevation="8dp"
        app:cardCornerRadius="40dp"
        app:cardElevation="8dp"
        app:strokeWidth="2dp">


        <!-- Contenido del formulario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFCFC"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">

                <!-- Título centrado -->
                <TextView
                    android:id="@+id/lblnombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Actividades Turísticas"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

            </LinearLayout>


            <!-- Campo 1 -->
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblnombreActividad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:text="Nombre de la actividad:"
                    android:padding="4dp"
                    android:textColor="#8C8484"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtNombreActividad"
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                    android:layout_width="400dp"
                    android:layout_height="wrap_content"
                    android:background="#EAE4E4"
                    android:gravity="center_vertical"
                    android:hint="Ingrese el nombre de la actividad"
                    android:paddingStart="10dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp" />
            </LinearLayout>

            <!-- Campo 2 -->
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtDescripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:text="Descripcion:"
                    android:padding="4dp"
                    android:textColor="#8C8484"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editText2"
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E9E3E3"
                    android:gravity="center_vertical"
                    android:hint="Ingrese la descripción"
                    android:paddingStart="10dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="10dp" />
            </LinearLayout>

            <!-- Campo 3 -->
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:text="Imagen:"
                    android:padding="4dp"
                    android:textColor="#8C8484"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtImagen"
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E9E3E3"
                    android:gravity="center_vertical"
                    android:hint="Ingrese la imagen"
                    android:paddingStart="10dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp" />
            </LinearLayout>

            <!-- Campo 4 -->
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:text="Fecha:"
                    android:padding="4dp"
                    android:textColor="#8C8484"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtFecha"
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E9E3E3"
                    android:gravity="center_vertical"
                    android:hint="Ingrese la fecha"
                    android:paddingStart="10dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp" />
            </LinearLayout>
            <!-- Campo 5 -->
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:text="Costo:"
                    android:padding="4dp"
                    android:textColor="#8C8484"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtCosto"
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#E9E3E3"
                    android:gravity="center_vertical"
                    android:hint="Ingrese el costo"

                    android:paddingStart="10dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp" />
            </LinearLayout>

            <Button
                android:id="@+id/btnAgregar"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:text="Agregar" />



        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>
